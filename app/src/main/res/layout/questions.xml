<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Angemeldet als: X"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frage: 0"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_scoreTotalRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insgesamt richtig beantwortet: 0"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_scoreTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insgesamt beantwortet: 0 "
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center_vertical|right"
        android:layout_gravity="center|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_textview_questions"
            android:gravity="center"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_a1"
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_button_questions"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_a2"
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_button_questions"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center|top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_a3"
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/layout_button_questions"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_a4"
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_button_questions"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>